@using DoctorPatientDashboard.Models.Enums
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Manager Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="~/Image/blood-donation.png" type="image/png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" /> <!-- Link to shared CSS -->
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/Image/blood-donation.png" width="30" height="30" class="d-inline-block align-top" alt="Icon" />
                Admin Panel
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-2 d-none d-md-block sidebar p-0">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
                                <i class="fas fa-chart-line me-2"></i> Dashboard
                            </a>
                        </li>
                        @if (User.IsInRole(AppRoles.Admin.ToString()))
                        {
                            <li class="nav-item mb-2">
                                <a class="nav-link" asp-controller="Doctor" asp-action="Index">
                                    <i class="fas fa-user-md me-2"></i> Manage Doctors
                                </a>
                            </li>
                        }
                        <li class="nav-item mb-2">
                            <a class="nav-link" asp-controller="Patients" asp-action="Index">
                                <i class="fas fa-users me-2"></i> Patients
                            </a>
                        </li>
                      
                    </ul>
                    <div class="mt-auto">
                        <form asp-action="Logout" asp-controller="Account" method="post">
                            <button type="submit" class="btn btn-danger w-100">Logout</button>
                        </form>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewBag.PageTitle</h1>
                </div>
                <p class="lead">@ViewBag.PageDescription</p>
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div>Manager Dashboard © @DateTime.Now.Year</div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.getElementById('sidebar');
            const navbarToggler = document.querySelector('.navbar-toggler');

            navbarToggler.addEventListener('click', function () {
                sidebar.classList.toggle('collapsed');
                document.querySelector('main').classList.toggle('collapsed');
                if (window.innerWidth <= 480) {
                    sidebar.classList.toggle('active');
                }
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>