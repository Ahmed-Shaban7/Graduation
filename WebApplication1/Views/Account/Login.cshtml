@model DoctorPatientDashboard.Controllers.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .login-container {
            display: flex;
            min-height: 100vh;
            width: 100%;
        }

        .login-branding {
            position: relative;
            width: 50%;
            background-image: url('/images/login-bg.jpg'); /* ممكن تغيرها لصورة خلفية لو حبيت */
            background-size: cover;
            background-position: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            padding: 2rem;
        }

            .login-branding::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: #172554;
                opacity: 0.5;
            }

        .branding-content {
            position: relative;
            z-index: 1;
        }

            .branding-content img {
                width: 120px;
                margin-bottom: 20px;
                filter: drop-shadow(0 2px 4px rgba(0,0,0,0.5));
                opacity: 0.8; 
            }


            .branding-content h1 {
                font-size: 2rem;
                font-weight: 700;
                text-shadow: 0 2px 4px rgba(0,0,0,0.5);
                opacity: 0.8;
            }

            .branding-content p {
                font-size: 1.1rem;
                max-width: 400px;
                margin: 1rem auto 0;
                text-shadow: 0 1px 3px rgba(0,0,0,0.5);
            }

        .login-form-container {
            width: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
            background-color: #f8f9fa;
        }

        .login-form {
            width: 100%;
            max-width: 400px;
        }

        media (max-width: 768px) {
            .login-branding

        {
            display: none;
        }

        .login-form-container {
            width: 100%;
        }

        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-branding">
            <div class="branding-content">
                <img src="~/images/logo_maps.jpeg" alt="MAPS Logo" />
                <h1>MAPS</h1>
                <p>Malaria AI Prediction System  Empowering Doctors with Intelligent Diagnosis</p>
            </div>
        </div>

        <div class="login-form-container">
            <div class="login-form">
                <h2 class="text-center mb-3" style="color: #172554; font-weight: 700;">Log In</h2>
                <p class="text-center text-muted mb-4">Use your account to access the dashboard.</p>
                <section>
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Email" class="form-label"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" placeholder="password" />
                            <label asp-for="Password" class="form-label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label" asp-for="RememberMe">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>

                        <button type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #1E3A8A;">Log in</button>
                    </form>
                </section>
            </div>
        </div>
    </div>

    @* <partial name="_ValidationScriptsPartial" /> *@
</body>
</html>
