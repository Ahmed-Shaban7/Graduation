@using DoctorPatientDashboard.Models
@using DoctorPatientDashboard.Models.Enums
@model IEnumerable<Patient>

@{
    ViewData["Title"] = "Patients List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #1E3A8A;
            --secondary-blue: #3B82F6;
            --light-blue: #BFDBFE;
            --dark-blue: #172554;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #E0EAFF 0%, #F9FAFB 100%);
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
        }

        .patients-card {
            background: white;
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 100%;
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            flex-wrap: wrap; /* Allows wrapping on small screens */
            gap: 1rem;
        }

        h2 {
            color: var(--dark-blue);
            font-weight: 700;
            margin-bottom: 0;
            font-size: clamp(1.5rem, 4vw, 2rem);
        }

        .table-responsive {
            overflow-x: auto;
        }

        .table {
            min-width: 800px;
            margin-bottom: 0;
        }

            .table thead {
                background-color: var(--primary-blue);
                color: white;
            }

            .table th, .table td {
                vertical-align: middle;
                padding: clamp(8px, 1.5vw, 12px);
                text-align: center;
                white-space: nowrap;
            }

        .table-hover tbody tr:hover {
            background-color: var(--light-blue);
            transition: background-color 0.2s ease;
        }

        /* Style for the new button */
        .btn-primary {
            background-color: var(--primary-blue);
            border-color: var(--primary-blue);
            color: white;
            font-weight: 500;
        }

            .btn-primary:hover {
                background-color: var(--dark-blue);
                border-color: var(--dark-blue);
                color: white;
            }

        .btn-info {
            background-color: var(--secondary-blue);
            border: none;
            border-radius: 6px;
            padding: clamp(4px, 1vw, 8px) clamp(8px, 1.5vw, 12px);
            color: white;
            font-weight: 500;
            transition: background-color 0.2s ease, transform 0.1s ease;
        }

            .btn-info:hover {
                background-color: #2563EB;
                transform: translateY(-1px);
            }

        .btn-danger {
            background-color: #EF4444;
            border: none;
            border-radius: 6px;
            padding: clamp(4px, 1vw, 8px) clamp(8px, 1.5vw, 12px);
            color: white;
            font-weight: 500;
            transition: background-color 0.2s ease, transform 0.1s ease;
        }

            .btn-danger:hover {
                background-color: #DC2626;
                transform: translateY(-1px);
            }

        media (max-width: 768px) {
            .patients-card

        {
            padding: 1rem;
        }

        .table th, .table td {
            font-size: clamp(0.75rem, 2.5vw, 1rem);
        }

        .btn {
            font-size: clamp(0.7rem, 2vw, 0.875rem);
        }

        }

        media (max-width: 480px) {
            h2

        {
            font-size: 1.25rem;
        }

        .table th:nth-child(n+4),
        .table td:nth-child(n+4) {
            display: none;
        }

        .table td:first-child,
        .table th:first-child {
            width: 40%;
        }

        }
    </style>
</head>
<body>
    <div class="patients-card mx-3 mx-md-0">
        <div class="card-header">
            <h2>🏥 Patients List</h2>
            <a asp-action="Create" asp-controller="Patient" class="btn btn-primary">➕ Create New Patient</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Diagnosis</th>
                        @if (User.IsInRole(AppRoles.Admin.ToString()))
                        {
                            <th>Doctor</th>
                        }
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model)
                    {
                        <tr>
                            <td>@patient.Name</td>
                            <td>@patient.Address</td>
                            <td>@patient.Diagnosis</td>
                            @if (User.IsInRole(AppRoles.Admin.ToString()))
                            {
                                <td>@(patient.Doctor?.FullName ?? "Unassigned")</td>
                            }
                            <td>
                                <div class="d-flex gap-2 justify-content-center">
                                    <a href="@Url.Action("Details", "Patient", new { id = patient.PatientID })" class="btn btn-info btn-sm">Details</a>
                                    <a href="@Url.Action("Edit", "Patient", new { id = patient.PatientID })" class="btn btn-info btn-sm">Edit</a>
                                    <form asp-action="Delete" asp-controller="Patient" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@patient.PatientID" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this patient?');">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>